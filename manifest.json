{
  "name": "remotestorage cube",
  "version": "0.1",
  "manifest_version": 2,
  "description": "remotestorage authentication app",
  "icons" : {
    "128": "icon_connected.png"
  },
  "browser_action": {
    "default_icon": "icon_anonymous.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["remotestorage.js", "background.js"]
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "http://*/*",
    "https://*/*"
  ]
}
